    </div>
    <div class="flex flex-col items-center gap-10 mt-10 text-center lg:text-left">
      <SocialComponent
            size="lg"
            layout="dark"
            class="gap-5"
            linkType="follow"
            list={social.main.filter((s) => s.enable)}
          />
      <div>
